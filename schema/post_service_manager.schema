{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Service",
  "description": "A service",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "services": {
      "type": "array",
      "id": "services",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "id": "0",
        "properties": {
          "protocol": {
            "type": "array",
            "id": "protocol",
            "items": {
              "pattern": "^([^<>();'=\"]+)+$",
              "type": "string"
            },
            "minItems": 1
          },
          "entity_type": {
            "description": "default entity_type, if a device has not got entity_type uses this",
            "pattern": "^([^<>();'=\"/?#& ]+)*$",
            "type": "string",
            "maxLength": 256
          },
          "apikey": {
            "description": "apikey",
            "pattern": "^([^<>();'=\"]+)*$",
            "type": "string"
          },
          "token": {
            "description": "token",
            "pattern": "^([^<>();'=\"]+)*$",
            "type": "string"
          },
          "cbroker": {
            "description": "uri for the context broker",
            "type": "string",
            "pattern": "^([^<>();'=\"]+)+$",
            "format": "uri",
            "minLength": 1
          },
          "outgoing_route": {
            "description": "VPN/GRE tunnel identifier",
            "pattern": "^([^<>();'=\"]+)*$",
            "type": "string"
          },
          "attributes": {
            "type": "array",
            "id": "attributes",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "id": "0",
              "properties": {
                "object_id": {
                  "description": "The unique identifier by service for a device",
                  "pattern": "^([^<>();'=\"]+)+$",
                  "type": "string"
                },
                "name": {
                  "description": "Name of the entity, if it does not exits use device_id",
                  "pattern": "^([^<>();'=\"/?#& ]+)+$",
                  "type": "string",
                  "maxLength": 256
                },
                "type": {
                  "description": "type of the entity",
                  "pattern": "^([^<>();'=\"/?#& ]+)+$",
                  "type": "string",
                  "maxLength": 256
                },
                "metadatas": {
                  "type": "array",
                  "id": "metadatas",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "id": "0",
                    "properties": {
                      "value": {
                        "description": "Value assigned to metadata",
                        "type": "string",
                        "pattern": "^([^<>();'=\"]+)+$",
                        "minLength": 1
                      },
                      "name": {
                        "description": "Name of metadata",
                        "pattern": "^([^<>();'=\"/?#& ]+)+$",
                        "type": "string",
                        "maxLength": 256,
                        "minLength": 1
                      },
                      "type": {
                        "description": "type of metadata",
                        "type": "string",
                        "pattern": "^([^<>();'=\"/?#& ]+)+$",
                        "minLength": 1,
                        "maxLength": 256
                      }
                    },
                    "required": [
                      "name",
                      "type",
                      "value"
                    ]
                  }
                }
              },
              "required": [
                "type",
                "object_id",
                "name"
              ]
            }
          },
          "static_attributes": {
            "type": "array",
            "id": "static_attributes",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "id": "0",
              "properties": {
                "value": {
                  "description": "The unique identifier by service for a device",
                  "pattern": "^([^<>();'=\"]+)+$",
                  "type": "string"
                },
                "name": {
                  "description": "Name of the entity, if it does not exits use device_id",
                  "type": "string",
                  "pattern": "^([^<>();'=\"/?#& ]+)+$",
                  "maxLength": 256
                },
                "type": {
                  "description": "type of the entity",
                  "type": "string",
                  "pattern": "^([^<>();'=\"/?#& ]+)+$",
                  "maxLength": 256
                },
                "metadatas": {
                  "type": "array",
                  "id": "metadatas",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "id": "0",
                    "properties": {
                      "value": {
                        "description": "Value assigned to metadata",
                        "type": "string",
                        "pattern": "^([^<>();'=\"]+)+$",
                        "minLength": 1
                      },
                      "name": {
                        "description": "Name of metadata",
                        "type": "string",
                        "pattern": "^([^<>();'=\"/?#& ]+)+$",
                        "maxLength": 256,
                        "minLength": 1
                      },
                      "type": {
                        "description": "type of metadata",
                        "type": "string",
                        "pattern": "^([^<>();'=\"/?#& ]+)+$",
                        "maxLength": 256,
                        "minLength": 1
                      }
                    },
                    "required": [
                      "name",
                      "type",
                      "value"
                    ]
                  }
                }
              },
              "required": [
                "type",
                "name",
                "value"
              ]
            }
          }
        },
        "required": [
          "apikey",
          "protocol"
        ]
      }
    }
  },
  "required": [
    "services"
  ]
}
